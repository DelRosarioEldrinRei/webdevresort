block prepend main
	.container
		h1.my-4.text-center.text-lg-left Thumbnail Gallery
			button.btn.btn-primary.btn-lg.float-right(data-toggle="modal" data-target="#exampleModal") Add Photo 
			#exampleModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel', aria-hidden='true')
				.modal-dialog(role='document')
					.modal-content
						.modal-header
							h5#exampleModalLabel.modal-title Add Photo
							button.close(type='button', data-dismiss='modal', aria-label='Close')
								span(aria-hidden='true') Ã—
						.modal-body
							form.font-normal(method="POST" enctype="multiform/form-data" action='/gallery')
								.form-group
									label(for='exampleFormControlFile1') Choose files
									input#exampleFormControlFile1.form-control-file(type='file' name="strImage" accept="image/*")

						.modal-footer
							button.btn.btn-primary(type='button') Upload
							button.btn.btn-secondary(type='button', data-dismiss='modal') Cancel

